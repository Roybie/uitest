html, body
  background #7bc4ef
  display flex
  font-family 'Open Sans', sans-serif
  height 100vh
  width 100%

*
  border 0
  box-sizing border-box
  margin 0
  padding 0

.chatwrapper
  display flex
  flex-flow row wrap
  height 100%
  margin auto
  max-height 1000px
  min-height 200px
  padding 10px
  width 750px

.chatwindow
  box-shadow 0 0 25px #2c879f
  display flex
  flex 3 0px
  flex-flow column
  order 1

.chatheader
  background white
  border-top none
  border-radius 5px 0 0 0
  height 50px
  padding 10px
  z-index 10

.chatmessages
  background white
  height 100%
  overflow scroll
  padding 10px

.chatinput
  background white
  border-top none
  border-radius 0 0 0 5px
  height 100px
  padding 10px
  z-index 10

.chatusers
  background #333
  border-left none
  border-radius 0 5px 5px 0
  box-shadow 0 0 20px #2c879f
  display flex
  flex 1 auto
  order 2
  padding 10px

.chatbubble
  background-color #7cc7ef
  border-radius 5px
  clear both
  color white
  display inline-block
  float left
  margin-top 10px
  max-width 75%
  padding 10px

@media all and (max-width: 600px)
  .chatusers
    display none
  .chatmessages
    border-radius 5px 5px 0 0
  .chatinput
    border-radius 0 0 5px 5px
